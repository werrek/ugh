{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.event_details'|trans({'%id%': event.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title.event_details'|trans({'%id%': event.id|default('')}) }}</h1>
    {% if event is defined and event|length %}
        <table class="table">
            <tbody>
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>{{ 'label.title'|trans }}</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>{{ 'label.place'|trans }}</th>
                <td>{{ event.place }}</td>
            </tr>
            <tr>
                <th>{{ 'label.date'|trans }}</th>
                <td>{{ event.date|format_date('long') }}</td>
            </tr>
            <tr>
                <th>{{ 'label.category'|trans }}</th>
                <td>
                    <a href="{{ url('category_show', {id: event.category.id}) }}">
                        {{ event.category.title }}
                    </a>
                </td>
            </tr>

            </tbody>
        </table>

        <div class="btn btn-light">
            <a href="{{ url('app_event_edit', {id: event.id}) }}" title="{{ 'action.edit'|trans }}">
                {{ 'action.edit'|trans }}</a>
        </div>
        <div class="btn btn-light">
            <a href="{{ url('app_event_delete', {id: event.id}) }}" title="{{ 'action.delete'|trans }}">
                {{ 'action.delete'|trans }}</a>
        </div>
        <p>
        <a href="{{ url('app_event_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-primary" style="margin-top:10px;">
            {{ 'action.back_to_list'|trans }}
        </a>
        </p>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}